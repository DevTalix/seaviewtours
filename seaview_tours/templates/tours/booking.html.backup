    <!-- Hero Banner -->
    <section class="booking-hero">
        <div class="container">
            <h1>Book With Us</h1>
            <p>Fill the simple form below. Your booking is sent instantly to our WhatsApp agent, and we'll contact you within 1 hour.</p>
            <div class="hero-buttons">
                <a href="#booking-form" class="btn btn-primary">Book Now</a>
            </div>
        </div>
    </section>

    <!-- Booking Container -->
    <section class="booking-container">
        <div class="booking-wrapper">
            <!-- Service Information -->
           
            </div>

            <!-- Booking Form -->
            <div class="booking-form-container" id="booking-form">
                <h2 class="section-title"> Booking Form</h2>
                <p style="color: #666; margin-bottom: 1.5rem;">Fill this simple form. Everything happens automatically.</p>
                
              <form id="simpleBookingForm" class="booking-form" novalidate>
                    <div class="form-group">
                        <label for="serviceType" class="form-label">What service do you need? <span class="required">*</span></label>
                        <select id="serviceType" name="serviceType" class="form-select" required>
                            <option value="">Select a service</option>
                            <option value="Tour Package">Tour Package</option>
                            <option value="Visa Processing">Visa Processing</option>
                            <option value="Passport Processing">Passport Processing</option>
                            <option value="Air Ticket">Air Ticket</option>
                            <option value="Car Hire">Car Hire</option>
                            <option value="Honeymoon Package">Honeymoon Package</option>
                            <option value="National ID Services">National ID Services</option>
                            <option value="Interpol Services">Interpol Services</option>
                        </select>
                    </div>
                    
                    <div class="form-group">
                        <label for="fullName" class="form-label">Your Full Name <span class="required">*</span></label>
                        <input type="text" id="fullName" name="fullName" class="form-input" required 
                               placeholder="John Smith" autocomplete="name">
                    </div>
                    
                    <div class="form-group">
                        <label for="phone" class="form-label">WhatsApp/Phone Number <span class="required">*</span></label>
                        <input type="tel" id="phone" name="phone" class="form-input" required 
                               placeholder="+256 701 123 456 or 0701 123 456" autocomplete="tel">
                        <small style="display: block; margin-top: 5px; color: #666;">We'll contact you on this number</small>
                    </div>
                    
                    <div class="form-group">
                        <label for="bookingDetails" class="form-label">What do you need? (Optional)</label>
                        <textarea id="bookingDetails" name="bookingDetails" class="form-textarea" 
                                  placeholder="Example: Need Uganda visa for 2 people, traveling next month"></textarea>
                    </div>

                    <!-- Security Notice -->
                    <div class="security-notice">
                        <i class="fas fa-shield-alt"></i>
                        <span>Your information is safe. We only use it for your booking.</span>
                    </div>
                    <div class="form-group">
</div>
                    
                    <div id="formStatus" class="form-status"></div>
                    
                   <button type="submit" class="submit-btn">
                   <i class="fas fa-paper-plane"></i> Book Now
                </button>


                </form>
            </div>
        </div>
    </section>
    <script>
document.getElementById('simpleBookingForm').addEventListener('submit', function(e) {
    e.preventDefault();

    const name = document.getElementById('fullName').value.trim();
    const phone = document.getElementById('phone').value.trim();
    const service = document.getElementById('serviceType').value.trim();
    const details = document.getElementById('bookingDetails').value.trim();
    const statusBox = document.getElementById('formStatus');

    // Reset status
    statusBox.textContent = "";
    statusBox.className = "form-status";

    // Required field check
    if (!name || !phone || !service) {
        statusBox.textContent = "Please fill in all required fields.";
        statusBox.classList.add("error");
        return;
    }

    // Phone validation (at least 9 digits)
    const digits = phone.replace(/\D/g, "");
    if (digits.length < 9) {
        statusBox.textContent = "Please enter a valid phone number.";
        statusBox.classList.add("error");
        return;
    }

    // Build WhatsApp message
    const whatsappNumber = "256701157839";
    const message =
        `Hello, I would like to book a service:\n` +
        `Name: ${name}\n` +
        `Phone: ${phone}\n` +
        `Service: ${service}\n` +
        `Details: ${details}`;

    const url = `https://wa.me/${whatsappNumber}?text=${encodeURIComponent(message)}`;

    // Show success before redirect
    statusBox.textContent = "Redirecting to WhatsApp...";
    statusBox.classList.add("success");

    window.open(url, "_blank");
});
</script>


