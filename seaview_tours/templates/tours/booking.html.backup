{% load static %}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ page_title|default:"SeaView Tours & Travel" }}</title>
    <meta name="description" content="Book your travel services securely with SeaView Tours. Tour packages, visa processing, passport services, air tickets, and more.">
    
    <!-- Fonts & Icons -->
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600;700&family=Open+Sans:wght@400;600&display=swap" rel="stylesheet">
   <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" crossorigin="anonymous">
    
    
    <link rel="stylesheet" href="css/styles.css">
    <style>
        /* ========== BOOKING PAGE STYLES ========== */
        
        /* Hero Banner */
        .booking-hero {
            background: linear-gradient(rgba(46, 58, 89, 0.85), rgba(46, 58, 89, 0.85)),
                        url('https://images.unsplash.com/photo-1488646953014-85cb44e25828?ixlib=rb-4.0.3&auto=format&fit=crop&w=1600&q=80');
            background-size: cover;
            background-position: center;
            color: white;
            padding: 160px 0 100px;
            text-align: center;
            margin-top: 0;
            min-height: 60vh;
            display: flex;
            align-items: center;
        }

        .booking-hero h1 {
            font-size: 3rem;
            margin-bottom: 1rem;
            text-shadow: 0 2px 10px rgba(0,0,0,0.3);
        }

        .booking-hero p {
            font-size: 1.2rem;
            max-width: 600px;
            margin: 0 auto 2rem;
            opacity: 0.9;
        }

        /* Booking Container */
        .booking-container {
            padding: 80px 0;
            background: #f8fafc;
        }

        .booking-wrapper {
            display: grid;
            grid-template-columns: 1fr;
            gap: 3rem;
            max-width: 1200px;
            margin: 0 auto;
        }

        @media (min-width: 992px) {
            .booking-wrapper {
                grid-template-columns: 1fr 1fr;
            }
        }

        /* Service Selection */
        .service-selection {
            background: white;
            padding: 2.5rem;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.08);
        }

        .section-title {
            color: var(--secondary-blue);
            margin-bottom: 1.5rem;
            font-size: 1.8rem;
            position: relative;
            padding-bottom: 10px;
        }

        .section-title::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            width: 60px;
            height: 4px;
            background: var(--primary-orange);
            border-radius: 2px;
        }

        /* Booking Form */
        .booking-form-container {
            background: white;
            padding: 2.5rem;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.08);
            position: sticky;
            top: 100px;
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

        .form-label {
            display: block;
            margin-bottom: 0.5rem;
            color: var(--secondary-blue);
            font-weight: 600;
            font-size: 0.95rem;
        }

        .form-label .required {
            color: #e53e3e;
        }

        .form-input, .form-select, .form-textarea {
            width: 100%;
            padding: 12px 15px;
            border: 1px solid #ddd;
            border-radius: 8px;
            font-family: 'Open Sans', sans-serif;
            font-size: 1rem;
            transition: all 0.3s;
            background: white;
        }

        .form-input:focus, .form-select:focus, .form-textarea:focus {
            outline: none;
            border-color: var(--primary-orange);
            box-shadow: 0 0 0 3px rgba(255, 107, 53, 0.1);
        }

        .form-textarea {
            min-height: 100px;
            resize: vertical;
        }

        /* Submit Button */
        .submit-btn {
            background: var(--primary-orange);
            color: white;
            border: none;
            padding: 16px 30px;
            border-radius: 8px;
            font-weight: 600;
            font-size: 1.1rem;
            cursor: pointer;
            transition: all 0.3s;
            width: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
            margin-top: 1.5rem;
        }

        .submit-btn:hover:not(:disabled) {
            background: #e55a2b;
            transform: translateY(-2px);
        }

        .submit-btn:disabled {
            background: #ccc;
            cursor: not-allowed;
            transform: none;
        }

        /* Form Status */
        .form-status {
            margin-top: 1rem;
            padding: 1rem;
            border-radius: 8px;
            text-align: center;
            font-weight: 600;
            display: none;
        }

        .form-status.success {
            background: #c6f6d5;
            color: #22543d;
            display: block;
        }

        .form-status.error {
            background: #fed7d7;
            color: #742a2a;
            display: block;
        }

        /* Security Notice */
        .security-notice {
            background: #e8f4fd;
            padding: 1rem;
            border-radius: 8px;
            margin: 1.5rem 0;
            font-size: 0.9rem;
            color: #2c5282;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .security-notice i {
            color: #2c5282;
            flex-shrink: 0;
        }

        /* Booking Steps */
        .booking-steps {
            background: #f8fafc;
            padding: 1.5rem;
            border-radius: 10px;
            margin-top: 2rem;
        }

        .step {
            display: flex;
            align-items: center;
            gap: 15px;
            margin-bottom: 12px;
            padding-bottom: 12px;
            border-bottom: 1px dashed #ddd;
        }

        .step:last-child {
            border-bottom: none;
            margin-bottom: 0;
        }

        .step-number {
            width: 30px;
            height: 30px;
            background: var(--primary-orange);
            color: white;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 700;
            font-size: 0.9rem;
        }

        /* Floating WhatsApp */
        .whatsapp-float {
            position: fixed;
            bottom: 20px;
            right: 20px;
            width: 60px;
            height: 60px;
            background: #25D366;
            color: white;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.8rem;
            box-shadow: 0 4px 12px rgba(37, 211, 102, 0.4);
            z-index: 1000;
            text-decoration: none;
            transition: all 0.3s;
        }

        .whatsapp-float:hover {
            transform: scale(1.1);
            background: #128C7E;
        }

        /* Responsive Design */
        @media (max-width: 1200px) {
            .booking-wrapper {
                padding: 0 20px;
            }
        }

        @media (max-width: 992px) {
            .booking-hero h1 {
                font-size: 2.5rem;
            }
            
            .booking-form-container {
                position: static;
            }
        }

        @media (max-width: 768px) {
            .booking-hero {
                padding: 140px 0 80px;
                min-height: 50vh;
            }
            
            .booking-hero h1 {
                font-size: 2rem;
            }
            
            .booking-hero p {
                font-size: 1.1rem;
            }
            
            .booking-container {
                padding: 60px 0;
            }
            
            .service-selection, .booking-form-container {
                padding: 2rem;
            }
        }

        @media (max-width: 480px) {
            .booking-hero h1 {
                font-size: 1.8rem;
            }
            
            .service-selection, .booking-form-container {
                padding: 1.5rem;
            }
            
            .section-title {
                font-size: 1.5rem;
            }
        }
    </style>
</head>
