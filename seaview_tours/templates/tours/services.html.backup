                font-size: 1.1rem;
            }
            
            .service-card-header {
                padding: 1.5rem;
            }
            
            .service-card-header h3 {
                font-size: 1.5rem;
            }
            
            .service-card-content {
                padding: 1.5rem;
                grid-template-columns: 1fr;
            }
            
            .cta-buttons {
                flex-direction: column;
                align-items: center;
            }
            
            .btn-cta {
                width: 100%;
                max-width: 300px;
                justify-content: center;
            }
        }

        @media (max-width: 480px) {
            .services-hero h1 {
                font-size: 1.8rem;
            }
            
            .section-title h2 {
                font-size: 1.8rem;
            }
            
            .service-card-header {
                padding: 1.2rem;
            }
            
            .action-buttons {
                flex-direction: column;
            }
            
            .btn-service {
                width: 100%;
            }
            
            .addons-grid {
                grid-template-columns: 1fr;
            }
        }

        /* Floating WhatsApp */
        .whatsapp-float {
